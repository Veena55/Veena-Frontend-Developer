        "browser": true,
        "es2021": true,
        "jest": true // This tells ESLint to recognize Jest globals
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:jest/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react","jest"
